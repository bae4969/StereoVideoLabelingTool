<Window x:Class="StereoVideoLabelingTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StereoVideoLabelingTool"
        xmlns:controls="clr-namespace:StereoVideoLabelingTool.Controls"
        xmlns:widgets="clr-namespace:StereoVideoLabelingTool.Widgets"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="900"
        Width="1600"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Grid>
        <!-- 전체 Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <!-- 상단 메뉴바 -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem x:Name="NewMenuItem"
                          Header="_New"
                          Click="NewMenuItem_Click" />
                <MenuItem x:Name="OpenMenuItem"
                          Header="_Open"
                          Click="OpenMenuItem_Click" />
                <MenuItem x:Name="CloseMenuItem"
                          Header="_Close"
                          Click="CloseMenuItem_Click" />
                <MenuItem x:Name="SaveMenuItem"
                          Header="_Save"
                          Click="SaveMenuItem_Click" />
                <MenuItem x:Name="SaveAsMenuItem"
                          Header="_Save As"
                          Click="SaveAsMenuItem_Click" />
                <Separator />
                <MenuItem x:Name="RestartMenuItem"
                          Header="_Restart"
                          Click="RestartMenuItem_Click" />
                <MenuItem x:Name="ExitMenuItem"
                          Header="_Exit"
                          Click="ExitMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="Settings">
                <MenuItem x:Name="PreferencesMenuItem"
                          Header="_Preferences"
                          Click="PreferencesMenuItem_Click" />
                <MenuItem x:Name="ReloadResourceMenuItem"
                          Header="_Reload Resources"
                          Click="ReloadResourceMenuItem_Click" />
            </MenuItem>
            <Separator />
            <MenuItem x:Name="DevTestLoad"
                      Visibility="Collapsed"
                      Header="Dev Load"
                      Click="DevTestLoad_Click" />
            <MenuItem x:Name="DevTestSave"
                      Visibility="Collapsed"
                      Header="Dev Save"
                      Click="DevTestSave_Click" />
            <MenuItem x:Name="DevTestExe"
                      Visibility="Collapsed"
                      Header="Dev Exec"
                      Click="DevTestExec_Click" />
        </Menu>

        <!-- 메인 컨텐츠 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>


            <!-- 좌측 패널 -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
            </Grid>

            <controls:FileManagerControl x:Name="LabelFileManagerControl"
                                         Grid.Row="0"
                                         SelectedFIle="LabelFileManagerControl_SelectedFIle" />

            <!--<controls:VerticalImageControlContainer
				x:Name="LeftTopContainer"
				Margin="5"
				Padding="5"
				Grid.Row="0"
				>

				<controls:VerticalImageControlContainer.Items>
					<Button
						Content="Load"
						HorizontalAlignment="Stretch"
						Height="50"
						Margin="5"
						Click="Button1_Click"
						/>
					<Button
						Content="Unload"
						HorizontalAlignment="Stretch"
						Height="50"
						Margin="5"
						Click="Button2_Click"
						/>
				</controls:VerticalImageControlContainer.Items>
			</controls:VerticalImageControlContainer>-->

            <GridSplitter Grid.Column="1"
                          Width="10"
                          Margin="10,0,10,0"
                          HorizontalAlignment="Stretch" />

            <!-- 중앙 패널 -->
            <widgets:VideoViewerControl x:Name="StreoVideoViewer"
                                        Grid.Column="2"
                                        BorderThickness="1" />

            <GridSplitter Grid.Column="3"
                          Width="10"
                          Margin="10,0,10,0"
                          HorizontalAlignment="Stretch" />

            <!-- 우측 패널 -->
            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- 우측 상단 패널 -->
                <widgets:VerticalContainerControl x:Name="RightTopContainer"
                                                  Margin="5"
                                                  Padding="5"
                                                  Grid.Row="0">

                    <widgets:VerticalContainerControl.Widgets>
                        <widgets:VideoLutControl />
                    </widgets:VerticalContainerControl.Widgets>
                </widgets:VerticalContainerControl>

                <GridSplitter Grid.Row="1"
                              Height="10"
                              Margin="0,10,0,10"
                              HorizontalAlignment="Stretch" />

                <!-- 우측 하단 패널 -->
                <widgets:VerticalContainerControl x:Name="RightBotContainer"
                                                  Margin="5"
                                                  Padding="5"
                                                  Grid.Row="2">

                    <widgets:VerticalContainerControl.Widgets>
                        <TextBox Text="asd" />
                        <TextBox Text="asd" />
                    </widgets:VerticalContainerControl.Widgets>
                </widgets:VerticalContainerControl>
            </Grid>
        </Grid>

        <GridSplitter Grid.Row="2"
                      Height="10"
                      Margin="0,10,0,10"
                      HorizontalAlignment="Stretch" />

        <!-- 하단 정보 -->
        <GroupBox BorderThickness="1"
                  Grid.Row="3"
                  Header="Log">
            <TextBlock x:Name="LogTextBlock"
                       Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}" />
        </GroupBox>
    </Grid>
</Window>
