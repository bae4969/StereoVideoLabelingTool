<local:StereoVideoControlBase x:Class="StereoVideoLabelingTool.Widgets.VideoViewerControl"
                              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                              xmlns:local="clr-namespace:StereoVideoLabelingTool.Widgets"
                              mc:Ignorable="d"
                              d:DesignHeight="400"
                              d:DesignWidth="800"
                              SizeChanged="ImageControlBase_SizeChanged">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>


        <!-- 이미지 도구 -->
        <Menu Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="2">

            <MenuItem Header="Label"
                      FontSize="13">

                <MenuItem Header="Brush Style">
                    <ListBox SelectionMode="Single">
                        <ListBoxItem>
                            <CheckBox Content="항목 1"
                                      IsChecked="False" />
                        </ListBoxItem>
                        <ListBoxItem>
                            <CheckBox Content="항목 2"
                                      IsChecked="False" />
                        </ListBoxItem>
                        <ListBoxItem>
                            <CheckBox Content="항목 3"
                                      IsChecked="False" />
                        </ListBoxItem>
                    </ListBox>
                    <MenuItem Header="Ellipse" />
                    <MenuItem Header="Rectangle" />
                </MenuItem>

                <MenuItem Header="Label">
                    <CheckBox Content="0" />
                    <CheckBox Content="1" />
                    <CheckBox Content="2" />
                    <CheckBox Content="3" />
                    <CheckBox Content="4" />
                    <CheckBox Content="5" />
                    <CheckBox Content="6" />
                    <CheckBox Content="7" />
                </MenuItem>

            </MenuItem>
            <MenuItem Header="Region"
                      FontSize="13" />
            <MenuItem Header="설정"
                      FontSize="13" />
        </Menu>

        <Canvas x:Name="LeftViewCanvas"
                Grid.Column="0"
                Grid.Row="1"
                Background="#202020"
                ClipToBounds="True"
                MouseWheel="ViewCanvas_MouseWheel"
                MouseDown="ViewCanvas_MouseDown"
                MouseMove="ViewCanvas_MouseMove"
                MouseUp="ViewCanvas_MouseUp">
            <Image x:Name="LeftViewImage"
                   Stretch="None">

                <Image.RenderTransform>
                    <TransformGroup x:Name="LeftViewTransformGroup">
                        <ScaleTransform x:Name="LeftViewScale"
                                        ScaleX="1.0"
                                        ScaleY="1.0"
                                        CenterX="0"
                                        CenterY="0" />
                        <TranslateTransform x:Name="LeftViewTranslate"
                                            X="0"
                                            Y="0" />
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>

            <Line x:Name="LeftHorizontalLine"
                  Stroke="Yellow"
                  StrokeThickness="1">

            </Line>

            <Line x:Name="LeftVerticalLine"
                  Stroke="Yellow"
                  StrokeThickness="1">

            </Line>

        </Canvas>

        <Canvas x:Name="RightViewCanvas"
                Grid.Column="1"
                Grid.Row="1"
                Background="#202020"
                ClipToBounds="True"
                MouseWheel="ViewCanvas_MouseWheel"
                MouseDown="ViewCanvas_MouseDown"
                MouseMove="ViewCanvas_MouseMove"
                MouseUp="ViewCanvas_MouseUp">

            <Image x:Name="RightViewImage"
                   Stretch="None">

                <Image.RenderTransform>
                    <TransformGroup x:Name="RightViewTransformGroup">
                        <ScaleTransform x:Name="RightViewScale"
                                        ScaleX="1.0"
                                        ScaleY="1.0"
                                        CenterX="0"
                                        CenterY="0" />
                        <TranslateTransform x:Name="RightViewTranslate"
                                            X="0"
                                            Y="0" />
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>

            <Line x:Name="RightHorizontalLine"
                  Stroke="Yellow"
                  StrokeThickness="1">

            </Line>

            <Line x:Name="RightVerticalLine"
                  Stroke="Yellow"
                  StrokeThickness="1">

            </Line>
        </Canvas>

        <ScrollBar x:Name="TimePointScrollBar"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Grid.Row="2"
                   Minimum="0"
                   Value="0"
                   Maximum="0"
                   Orientation="Horizontal"
                   ValueChanged="TimePointScrollBar_ValueChanged" />
    </Grid>
</local:StereoVideoControlBase>
